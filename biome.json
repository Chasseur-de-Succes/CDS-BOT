{
    "$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
    "assist": { "actions": { "source": { "organizeImports": "on" } } },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 80
    },
    "files": {
        "includes": ["**", "!**/.vscode"]
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "always",
            "jsxQuoteStyle": "double",
            "semicolons": "always",
            "trailingCommas": "all",
            "quoteProperties": "asNeeded",
            "quoteStyle": "double",
            "bracketSpacing": true,
            "bracketSameLine": false
        }
    }
}
